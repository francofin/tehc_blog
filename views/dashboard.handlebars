    <!-- ======= Speaker Details Sectionn ======= -->
    <section id="speakers-details">
      <div class="container">
        <div class="section-header">
      
          <h2>Your Dashboard</h2>
    
          <p>Praesentium ut qui possimus sapiente nulla.</p>
        </div>

        <div class="row">
          <div class="col-md-6">
            <img src="img/cover.jpeg" alt="Speaker 1" class="img-fluid">
          </div>

          <div class="col-md-6">
            <div class="details">
              <h2>Continue adding to our great blog.</h2>
                <h2>Create New Post</h2>
                <form id = "new-post-form" class="php-email-form">
                    <div>
                    <label for="post-title">Title</label>
                    <input type="text" id="post-title" name="post-title" />
                    </div>
                    <div class="form-group">
                    <textarea class="form-control" name="post-body" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                    <div class="validate"></div>
                    </div>
                    <button type="submit" class="btn">Create</button>
                </form>
            </div>
          </div>

        </div>
      </div>

    </section>

    {{#if posts.length}}
    <section id="schedule" class="section-with-bg">
      <div class="container" data-aos="fade-up">
        <div class="section-header">
          <h2>Latest Posts</h2>
        </div>

        <div class="tab-content row justify-content-center" data-aos="fade-up" data-aos-delay="200">

          <!-- Schdule Day 1 -->
          <div role="tabpanel" class="col-lg-9 tab-pane fade show active" id="day-1">
              
              <h2>Your Posts</h2>
              {{#each posts}}

            <div class="row schedule-item">
              <div class="col-md-2"><time>{{format_date created_at}}</time></div>
              <div class="col-md-10">
                <h4>Post by <span>{{user.username}}</span></h4>
                <a href="/post/{{id}}">{{title}}</a>
                <p>{{body}}</p>
                <a href="/edit-post/{{id}}" class="edit-link">Edit post</a>
              </div>
            </div>
            {{/each}}

          </div>
          </section>
          {{/if}}

