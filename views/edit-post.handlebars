<section id="speakers-details">
      <div class="container">
        <div class="section-header">
          <h2>{{user.username}}'s Dashboard</h2>
          <p>Praesentium ut qui possimus sapiente nulla.</p>
        </div>

        <div class="row">
          <div class="col-md-6">
            <img src="assets/img/speakers/1.jpg" alt="Speaker 1" class="img-fluid">
          </div>

          <div class="col-md-6">
            <div class="details">
              <h2>Continue adding to our great blog.</h2>
                <h2>Create New Post</h2>
                <form class="new-post-form php-email-form">
                    <div>
                    <label for="post-title">Title</label>
                    <input type="hidden" id="post-id" name="post-id" value="{{post.id}}"/>
                    <input type="text" id="post-title" name="post-title" value="{{post.title}}"/>
                    <div>
                        {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
                        |
                        </div>
                    </div>
                    <div class="form-group">
                    <textarea class="form-control" name="post-body" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                    <div class="validate"></div>
                    </div>
                    <button type="submit" class="btn">Create</button>
                    <button type="button" class="delete-btn">Delete post</button>
                </form>
            </div>
          </div>

        </div>
      </div>

    </section>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>